APP_BIN_START='/srv/redis/bin/redis-server /srv/redis/etc/redis.conf'

APP_PID_FILE='/srv/redis/var/run/redis.pid'

APP_SIG_STOP='TERM'

APP_SIG_RELOAD='HUP'


app_once() {

    mkdir -p /srv/redis/var/{run,log,tmp}
    chown -R daemon:daemon /srv/redis/var/*

}

app_init() {

    if [ ! -f /srv/redis/etc/conf.d/useful.conf ]; then
        touch /srv/redis/etc/conf.d/useful.conf
    fi

}
