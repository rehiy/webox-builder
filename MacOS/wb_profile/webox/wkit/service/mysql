APP_BIN_NOHUP=1

APP_BIN_START='/srv/mysql/bin/mysqld_safe'

APP_PID_FILE='/srv/mysql/var/run/mysql.pid'

APP_SIG_STOP='TERM'

APP_SIG_RELOAD='HUP'


app_once() {

    grep _mysql /etc/group > /dev/null
    if [ $? -ne 0 ]; then
        groupadd _mysql -g 74
    fi

    grep _mysql /etc/passwd > /dev/null
    if [ $? -ne 0 ]; then
        useradd _mysql -u 74 -g 74
        usermod _mysql -d /srv/mysql -s /usr/bin/false
    fi

    mkdir -p /srv/mysql/var/{run,log,tmp}
    chown -R _mysql:_mysql /srv/mysql/var/*

    touch /srv/mysql/var/log/error.log
    chown _mysql:_mysql /srv/mysql/var/log/error.log

}
