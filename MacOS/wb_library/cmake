export wk_cmake=cmake-3.3.0

wb_make_cmake() {

    wb_apply http://www.cmake.org/files/v3.3/ ${wk_cmake} .tar.gz

    ./bootstrap --prefix=${webox} --docdir=share/doc/cmake --system-curl

    make && make install

}

wb_inst_cmake() {

    local fine=${webox}/bin/cmake

    [ -e ${fine} ] || wb_make_cmake
    [ -e ${fine} ] || wb_error ${wk_cmake}

}
