export wk_libiconv=libiconv-1.14

wb_make_libiconv() {

    wb_apply http://ftp.gnu.org/gnu/libiconv/ ${wk_libiconv} .tar.gz

    ./configure --prefix=${webox} --enable-shared

    make && make install

}

wb_inst_libiconv() {

    local fine=${webox}/lib/libiconv.la

    [ -e ${fine} ] || wb_make_libiconv
    [ -e ${fine} ] || wb_error ${wk_libiconv}

}
