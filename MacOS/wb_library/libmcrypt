export wk_libmcrypt=libmcrypt-2.5.8

wb_make_libmcrypt() {

    wb_apply http://jaist.dl.sourceforge.net/project/mcrypt/Libmcrypt/${wk_libmcrypt##*-}/ ${wk_libmcrypt} .tar.gz

    ./configure --prefix=${webox} --mandir=${webox}/share/man

    make && make install

}

wb_inst_libmcrypt() {

    local fine=${webox}/lib/libmcrypt.la

    [ -e ${fine} ] || wb_make_libmcrypt
    [ -e ${fine} ] || wb_error ${wk_libmcrypt}

}
