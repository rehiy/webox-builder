wk_libxml2=libxml2-2.9.2

wb_make_libxml2() {

    wb_apply ftp://xmlsoft.org/libxml2/ ${1} .tar.gz

    ./configure --prefix=${webox} \
        --with-iconv=${webox} \
        --with-zlib=${webox}

    make && make install

}

wb_inst_libxml2() {

    local name=${wk_libxml2}
    local fine=${webox}/lib/libxml2.a

    [ -e ${fine} ] || wb_make_libxml2 ${name}
    [ -e ${fine} ] || wb_error ${name}

}
