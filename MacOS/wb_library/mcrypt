export wk_mcrypt=libmcrypt-2.5.8

wb_make_mcrypt() {

    wb_apply http://jaist.dl.sourceforge.net/project/mcrypt/Libmcrypt/${wk_mcrypt##*-}/ ${wk_mcrypt} .tar.gz

    ./configure --prefix=${webox} --mandir=${webox}/share/man

    make && make install

}

wb_inst_mcrypt() {

    local fine=${webox}/lib/libmcrypt.la

    [ -e ${fine} ] || wb_make_mcrypt
    [ -e ${fine} ] || wb_error ${wk_mcrypt}

}
