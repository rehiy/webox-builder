### Update: 2020-03-28 ###

export wk_ncurses=ncurses-6.2-20200328

wk_find_ncurses() {

    wk__apply http://invisible-mirror.net/archives/ncurses/current/ ${wk_ncurses} .tgz

}

wk_make_ncurses() {

    ./configure --prefix=${wbcom} --mandir=${wbcom}/share/man --with-shared

    make && make install

}

wk_inst_ncurses() {

    local fine=${wbcom}/lib/libncurses.a

    [ -e ${fine} ] || wk_find_ncurses
    [ -e ${fine} ] || wk_make_ncurses
    [ -e ${fine} ] || wk__error ${wk_ncurses}

}
