### Update: 2019-01-31 ###

export wk_glibc=glibc-2.29

wk_find_glibc() {

    wk__apply http://ftp.gnu.org/gnu/glibc/ ${wk_glibc} .tar.xz

}

wk_make_glibc() {

    mkdir -p build && cd build

    ../configure --prefix=${wbcom}

    make && make install

}

wk_inst_glibc() {

    local fine=${wbcom}/lib/libc.a

    [ -e ${fine} ] || wk_find_glibc
    [ -e ${fine} ] || wk_make_glibc
    [ -e ${fine} ] || wk__error ${wk_glibc}

}
