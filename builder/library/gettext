### Update: 2014-06-01 ###

export wk_gettext=gettext-0.19.8

wk_find_gettext() {

    wk__apply http://ftp.gnu.org/gnu/gettext/ ${wk_gettext} .tar.xz

}

wk_make_gettext() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_gettext() {

    local fine=${wbcom}/bin/gettext

    [ -e ${fine} ] || wk_find_gettext
    [ -e ${fine} ] || wk_make_gettext
    [ -e ${fine} ] || wk__error ${wk_gettext}

}
