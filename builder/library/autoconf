### Update: 2012-04-25 ###

export wk_autoconf=autoconf-2.69

wk_find_autoconf() {
    wk__apply http://ftp.gnu.org/gnu/autoconf/ ${wk_autoconf} .tar.xz

}

wk_make_autoconf() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_autoconf() {

    local fine=${wblib}/bin/autoconf

    [ -e ${fine} ] || wk_find_autoconf
    [ -e ${fine} ] || wk_make_autoconf
    [ -e ${fine} ] || wk__error ${wk_autoconf}

}
