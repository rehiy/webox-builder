### Update: 2019-05-14 ###

export wk_cmake=cmake-3.14.4

wb_find_cmake() {

    wb_apply https://cmake.org/files/v3.14/ ${wk_cmake} .tar.gz

}

wb_make_cmake() {

    ./bootstrap --prefix=${webox} --docdir=share/doc/cmake --system-curl

    make && make install

}

wb_inst_cmake() {

    local fine=${webox}/bin/cmake

    [ -e ${fine} ] || wb_find_cmake
    [ -e ${fine} ] || wb_make_cmake
    [ -e ${fine} ] || wb_error ${wk_cmake}

}
