### Update: 2019-05-14 ###

export wk_cmake=cmake-3.14.4

wk_find_cmake() {

    wk__apply https://cmake.org/files/v3.14/ ${wk_cmake} .tar.gz

}

wk_make_cmake() {

    ./bootstrap --prefix=${wblib} --docdir=share/doc/cmake --system-curl

    make && make install

}

wk_inst_cmake() {

    local fine=${wblib}/bin/cmake

    [ -e ${fine} ] || wk_find_cmake
    [ -e ${fine} ] || wk_make_cmake
    [ -e ${fine} ] || wk__error ${wk_cmake}

}
