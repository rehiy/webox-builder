### Update: 2020-03-08 ###

export wk_bison=bison-3.5.3

wk_find_bison() {

    wk__apply http://ftp.gnu.org/gnu/bison/ ${wk_bison} .tar.xz

}

wk_make_bison() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_bison() {

    local fine=${wbcom}/bin/bison

    [ -e ${fine} ] || wk_find_bison
    [ -e ${fine} ] || wk_make_bison
    [ -e ${fine} ] || wk__error ${wk_bison}

}
