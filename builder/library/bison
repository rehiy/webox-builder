### Update: 2019-05-22 ###

export wk_bison=bison-3.4.1

wk_find_bison() {

    wk__apply http://ftp.gnu.org/gnu/bison/ ${wk_bison} .tar.xz

}

wk_make_bison() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_bison() {

    local fine=${wblib}/bin/bison

    [ -e ${fine} ] || wk_find_bison
    [ -e ${fine} ] || wk_make_bison
    [ -e ${fine} ] || wk__error ${wk_bison}

}
