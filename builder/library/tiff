### Update: 2018-12-10 ###

export wk_tiff=tiff-4.0.10

wk_find_tiff() {

    wk__apply http://download.osgeo.org/libtiff/ ${wk_tiff} .tar.gz

}

wk_make_tiff() {

    ./configure --prefix=${wbcom} --mandir=${wbcom}/share/man

    make && make install

}

wk_inst_tiff() {

    local fine=${wbcom}/lib/libtiff.a

    [ -e ${fine} ] || wk_find_tiff
    [ -e ${fine} ] || wk_make_tiff
    [ -e ${fine} ] || wk__error ${wk_tiff}

}
