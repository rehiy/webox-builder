### Update: 2018-12-10 ###

export wk_tiff=tiff-4.0.10

wb_find_tiff() {

    wb_apply http://download.osgeo.org/libtiff/ ${wk_tiff} .tar.gz

}

wb_make_tiff() {

    ./configure --prefix=${webox} --mandir=${webox}/share/man

    make && make install

}

wb_inst_tiff() {

    local fine=${webox}/lib/libtiff.a

    [ -e ${fine} ] || wb_find_tiff
    [ -e ${fine} ] || wb_make_tiff
    [ -e ${fine} ] || wb_error ${wk_tiff}

}
