### Update: 2019-06-18 ###

export wk_gawk=gawk-5.0.1

wk_find_gawk() {

    wk__apply http://ftp.gnu.org/gnu/gawk/ ${wk_gawk} .tar.xz

}

wk_make_gawk() {

    mkdir -p build && cd build

    ../configure --prefix=${wbcom}

    make && make install

}

wk_inst_gawk() {

    local fine=${wbcom}/bin/gawk

    [ -e ${fine} ] || wk_find_gawk
    [ -e ${fine} ] || wk_make_gawk
    [ -e ${fine} ] || wk__error ${wk_gawk}

}
