### Update: 2018-10-31 ###

export wk_curl=curl-7.62.0

wb_find_curl() {

    wb_apply https://curl.haxx.se/download/ ${wk_curl} .tar.gz

}

wb_make_curl() {

    ./configure --prefix=${webox}

    make && make install

    local cert=$(wb_get http://curl.haxx.se/ca/cacert.pem)
    cp -a $cert ${webox}/ssl/cert.pem

}

wb_inst_curl() {

    local fine=${webox}/lib/libcurl.a

    [ -e ${fine} ] || wb_find_curl
    [ -e ${fine} ] || wb_make_curl
    [ -e ${fine} ] || wb_error ${wk_curl}

}
