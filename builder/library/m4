### Update: 2016-12-31 ###

export wk_m4=m4-1.4.18

wk_find_m4() {

    wk__apply http://mirrors.kernel.org/gnu/m4/ ${wk_m4} .tar.xz

}

wk_make_m4() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_m4() {

    local fine=${wblib}/bin/m4

    [ -e ${fine} ] || wk_find_m4
    [ -e ${fine} ] || wk_make_m4
    [ -e ${fine} ] || wk__error ${wk_m4}

}
