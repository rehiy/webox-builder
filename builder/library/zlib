### Update: 2017-01-15 ###

export wk_zlib=zlib-1.2.11

wk_find_zlib() {

    wk__apply http://zlib.net/ ${wk_zlib} .tar.xz

}

wk_make_zlib() {

    ./configure --prefix=${wblib} --$(getconf LONG_BIT)

    make && make install

}

wk_inst_zlib() {

    local fine=${wblib}/lib/libz.a

    [ -e ${fine} ] || wk_find_zlib
    [ -e ${fine} ] || wk_make_zlib
    [ -e ${fine} ] || wk__error ${wk_zlib}

}
