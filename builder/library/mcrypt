### Update: 2003-03-08 ###

export wk_mcrypt=libmcrypt-2.5.7

wk_find_mcrypt() {

    wk__apply ftp://mcrypt.hellug.gr/pub/crypto/mcrypt/libmcrypt/ ${wk_mcrypt} .tar.gz

}

wk_make_mcrypt() {

    ./configure --prefix=${wblib} --mandir=${wblib}/share/man

    make && make install

}

wk_inst_mcrypt() {

    local fine=${wblib}/lib/libmcrypt.la

    [ -e ${fine} ] || wk_find_mcrypt
    [ -e ${fine} ] || wk_make_mcrypt
    [ -e ${fine} ] || wk__error ${wk_mcrypt}

}
