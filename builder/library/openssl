### Update: 2019-05-28 ###

export wk_openssl=openssl-1.0.2s

wk_find_openssl() {

    wk__apply http://www.openssl.org/source/ ${wk_openssl} .tar.gz

}

wk_make_openssl() {

    ./config --prefix=${wbcom} shared

    make && make install_sw

}

wk_inst_openssl() {

    local fine=${wbcom}/lib/libssl.a

    [ -e ${fine} ] || wk_find_openssl
    [ -e ${fine} ] || wk_make_openssl
    [ -e ${fine} ] || wk__error ${wk_openssl}

}
