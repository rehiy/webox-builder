### Update: 2019-02-26 ###

export wk_openssl=openssl-1.0.2r

wb_find_openssl() {

    wb_apply http://www.openssl.org/source/ ${wk_openssl} .tar.gz

}

wb_make_openssl() {

    ./config --prefix=${webox} shared

    make && make install_sw

}

wb_inst_openssl() {

    local fine=${webox}/lib/libssl.a

    [ -e ${fine} ] || wb_find_openssl
    [ -e ${fine} ] || wb_make_openssl
    [ -e ${fine} ] || wb_error ${wk_openssl}

}
