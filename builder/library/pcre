### Update: 2020-02-12 ###

export wk_pcre=pcre-8.44

wk_find_pcre() {

    wk__apply https://ftp.pcre.org/pub/pcre/ ${wk_pcre} .tar.gz

}

wk_make_pcre() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_pcre() {

    local fine=${wbcom}/lib/libpcre.a

    [ -e ${fine} ] || wk_find_pcre
    [ -e ${fine} ] || wk_make_pcre
    [ -e ${fine} ] || wk__error ${wk_pcre}

}
