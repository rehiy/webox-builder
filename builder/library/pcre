### Update: 2018-03-20 ###

export wk_pcre=pcre-8.42

wb_find_pcre() {

    wb_apply https://ftp.pcre.org/pub/pcre/ ${wk_pcre} .tar.gz

}

wb_make_pcre() {

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_pcre() {

    local fine=${webox}/lib/libpcre.a

    [ -e ${fine} ] || wb_find_pcre
    [ -e ${fine} ] || wb_make_pcre
    [ -e ${fine} ] || wb_error ${wk_pcre}

}
