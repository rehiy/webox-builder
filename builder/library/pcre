### Update: 2019-02-23 ###

export wk_pcre=pcre-8.43

wk_find_pcre() {

    wk__apply https://ftp.pcre.org/pub/pcre/ ${wk_pcre} .tar.gz

}

wk_make_pcre() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_pcre() {

    local fine=${wblib}/lib/libpcre.a

    [ -e ${fine} ] || wk_find_pcre
    [ -e ${fine} ] || wk_make_pcre
    [ -e ${fine} ] || wk__error ${wk_pcre}

}
