### Update: 2018-01-18 ###

export wk_maxmind=libmaxminddb-1.3.2

wk_find_maxmind() {

    wk__apply https://github.com/maxmind/libmaxminddb/releases/download/${wk_maxmind##*-}/ ${wk_maxmind} .tar.gz

}

wk_make_maxmind() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_maxmind() {

    local fine=${wbcom}/lib/libmaxminddb.a

    [ -e ${fine} ] || wk_find_maxmind
    [ -e ${fine} ] || wk_make_maxmind
    [ -e ${fine} ] || wk__error ${wk_maxmind}

}
