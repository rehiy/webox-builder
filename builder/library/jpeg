### Update: 2018-01-14 ###

export wk_jpeg=jpeg-9c

wk_find_jpeg() {

    wk__apply http://www.ijg.org/files/ jpegsrc.v${wk_jpeg##*-} .tar.gz ${wk_jpeg}

}

wk_make_jpeg() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_jpeg() {

    local fine=${wbcom}/lib/libjpeg.a

    [ -e ${fine} ] || wk_find_jpeg
    [ -e ${fine} ] || wk_make_jpeg
    [ -e ${fine} ] || wk__error ${wk_jpeg}

}
