### Update: 2018-03-11 ###

export wk_automake=automake-1.16.1

wk_find_automake() {

    wk__apply http://ftp.gnu.org/gnu/automake/ ${wk_automake} .tar.xz

}

wk_make_automake() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_automake() {

    local fine=${wblib}/bin/automake

    [ -e ${fine} ] || wk_find_automake
    [ -e ${fine} ] || wk_make_automake
    [ -e ${fine} ] || wk__error ${wk_automake}

}
