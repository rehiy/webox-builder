### Update: 2019-03-12 ###

export wk_zip=libzip-1.5.2

wk_find_zip() {

    wk__apply https://libzip.org/download/ ${wk_zip} .tar.xz

    rm -f CMakeCache.txt

}

wk_make_zip() {

    cmake . \
        -DCMAKE_PREFIX_PATH=${wbcom} \
        -DCMAKE_INSTALL_PREFIX=${wbcom}

    make && make install

}

wk_inst_zip() {

    local fine=${wbcom}/bin/ziptool

    [ -e ${fine} ] || wk_find_zip
    [ -e ${fine} ] || wk_make_zip
    [ -e ${fine} ] || wk__error ${wk_zip}

}
