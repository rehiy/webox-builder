### Update: 2019-09-29 ###

export wk_imagick=ImageMagick-6.9.10-67

wk_find_imagick() {

    wk__apply http://www.imagemagick.org/download/ ${wk_imagick} .tar.gz

}

wk_make_imagick() {

    ./configure --prefix=${wbcom} LDFLAGS=-L${wbcom}/lib

    make && make install

}

wk_inst_imagick() {

    local fine=${wbcom}/bin/convert

    [ -e ${fine} ] || wk_find_imagick
    [ -e ${fine} ] || wk_make_imagick
    [ -e ${fine} ] || wk__error ${wk_imagick}

}
