### Update: 2019-04-15 ###

export wk_png=libpng-1.6.37

wb_find_png() {

    wb_apply ftp://ftp.simplesystems.org/pub/libpng/png/src/libpng16/ ${wk_png} .tar.xz

}

wb_make_png() {

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_png() {

    local fine=${webox}/lib/libpng.a

    [ -e ${fine} ] || wb_find_png
    [ -e ${fine} ] || wb_make_png
    [ -e ${fine} ] || wb_error ${wk_png}

}
