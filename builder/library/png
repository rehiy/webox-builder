### Update: 2019-04-15 ###

export wk_png=libpng-1.6.37

wk_find_png() {

    wk__apply ftp://ftp.simplesystems.org/pub/libpng/png/src/libpng16/ ${wk_png} .tar.xz

}

wk_make_png() {

    ./configure --prefix=${wblib}

    make && make install

}

wk_inst_png() {

    local fine=${wblib}/lib/libpng.a

    [ -e ${fine} ] || wk_find_png
    [ -e ${fine} ] || wk_make_png
    [ -e ${fine} ] || wk__error ${wk_png}

}
