### Update: 2019-01-04 ###

export wk_xml2=libxml2-2.9.9

wk_find_xml2() {

    wk__apply ftp://xmlsoft.org/libxml2/ ${wk_xml2} .tar.gz

}

wk_make_xml2() {

    ./configure --prefix=${wblib} \
        --with-iconv=${wblib} \
        --with-zlib=${wblib}

    make && make install

}

wk_inst_xml2() {

    local fine=${wblib}/lib/libxml2.a

    [ -e ${fine} ] || wk_find_xml2
    [ -e ${fine} ] || wk_make_xml2
    [ -e ${fine} ] || wk__error ${wk_xml2}

}
