### Update: 2018-08-31 ###

export wk_re2c=re2c-1.1.1

wk_find_re2c() {

    wk__apply https://github.com/skvadrik/re2c/releases/download/${wk_re2c##*-}/ ${wk_re2c} .tar.gz

}

wk_make_re2c() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_re2c() {

    local fine=${wbcom}/bin/re2c

    [ -e ${fine} ] || wk_find_re2c
    [ -e ${fine} ] || wk_make_re2c
    [ -e ${fine} ] || wk__error ${wk_re2c}

}
