### Update: 2019-12-14 ###

export wk_re2c=re2c-1.3

wk_find_re2c() {

    wk__apply https://github.com/skvadrik/re2c/releases/download/${wk_re2c##*-}/ ${wk_re2c} .tar.xz

}

wk_make_re2c() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_re2c() {

    local fine=${wbcom}/bin/re2c

    [ -e ${fine} ] || wk_find_re2c
    [ -e ${fine} ] || wk_make_re2c
    [ -e ${fine} ] || wk__error ${wk_re2c}

}
