### Update: 2019-11-29 ###

export wk_oniguruma=onig-6.9.4

wk_find_oniguruma() {

    wk__apply https://github.com/kkos/oniguruma/releases/download/v${wk_oniguruma##*-}/ ${wk_oniguruma} .tar.gz

}

wk_make_oniguruma() {

    ./configure --prefix=${wbcom}

    make && make install

}

wk_inst_oniguruma() {

    local fine=${wbcom}/lib/libonig.a

    [ -e ${fine} ] || wk_find_oniguruma
    [ -e ${fine} ] || wk_make_oniguruma
    [ -e ${fine} ] || wk__error ${wk_oniguruma}

}
