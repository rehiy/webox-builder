#!/bin/bash
#

export webox=/srv

export wbase=`dirname $(readlink -f $0)`

if ! echo $PATH | grep -q $webox; then
    export PATH=$webox/bin:$webox/sbin:$PATH
fi

export wplat=$([ `uname` = "Darwin" ] && echo macos || echo linux)

##############################################HELPERS################

source Declare/perform/global
source Declare/perform/homebrew
source Declare/perform/os_$wplat

source Declare/perform/make_package
source Declare/perform/make_profile

env_initialize() {

    deps_install && homebrew_init

    if [ "$1" = "build" ]; then
        source Declare/preload
    fi

}
