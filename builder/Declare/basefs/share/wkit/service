#!/bin/sh
#

if [ -z "$WBX_APPS" ]; then
    export WBX_APPS="mysql nginx php redis"
fi

if ! echo $PATH | grep -q ${webox}; then
    export PATH=${webox}/bin:${webox}/sbin:$PATH
fi

#####################################################################

wbx_single() {
    if [ -x ${webox}/share/wkit/module/$1 ]; then
        ${webox}/share/wkit/module/$1 $2
    else
        echo "[wkit] invalid app: $1"
    fi
}

wbx_multiple() {
    local vv
    for vv in $WBX_APPS; do
        wbx_single $vv $1
    done
}

#####################################################################

if [ $# -eq 0 ]; then
    echo "now, using the wkit shell"
    exec /bin/sh
fi

if [ $# -eq 1 ]; then
    wbx_multiple $1
    exit $?
fi

wbx_single "$@"
