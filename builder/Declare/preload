#!/bin/bash
#

if [ ! -e $webox/lib/gcc ]; then
    brew_install gcc
fi

if [ ! -e $webox/cell/glibc ]; then
    brew_install glibc
fi

if [ ! -e $webox/cell/pcre ]; then
    brew_install pcre
fi

if [ ! -e $webox/include/libxml ]; then
    brew_install libxml2
fi

if [ ! -e $webox/cell/imagemagick@6 ]; then
    sed -i "/keg_only/d" `brew --repository homebrew/core`/Formula/imagemagick@6.rb
fi
