### Update: 2017-10-19 ###

export wk_gawk=gawk-4.2.0

wb_find_gawk() {

    wb_apply http://ftp.gnu.org/gnu/gawk/ ${wk_gawk} .tar.xz

}

wb_make_gawk() {

    mkdir -p build && cd build

    ../configure --prefix=${webox}

    make && make install

}

wb_inst_gawk() {

    local fine=${webox}/bin/gawk

    [ -e ${fine} ] || wb_find_gawk
    [ -e ${fine} ] || wb_make_gawk
    [ -e ${fine} ] || wb_error ${wk_gawk}

}
