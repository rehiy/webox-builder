### Update: 2018-02-01 ###

export wk_glibc=glibc-2.27

wb_find_glibc() {

    wb_apply http://ftp.gnu.org/gnu/glibc/ ${wk_glibc} .tar.xz

}

wb_make_glibc() {

    mkdir -p build && cd build

    ../configure --prefix=${webox}

    make && make install

}

wb_inst_glibc() {

    local fine=${webox}/lib/libc.a

    [ -e ${fine} ] || wb_find_glibc
    [ -e ${fine} ] || wb_make_glibc
    [ -e ${fine} ] || wb_error ${wk_glibc}

}
