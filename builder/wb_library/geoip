### Update: 2018-01-18 ###

export wk_geoip=GeoIP-1.6.12

wb_find_geoip() {

    wb_apply https://github.com/maxmind/geoip-api-c/releases/download/v${wk_geoip##*-}/ ${wk_geoip} .tar.gz

}

wb_make_geoip() {

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_geoip() {

    local fine=${webox}/lib/libGeoIP.a

    [ -e ${fine} ] || wb_find_geoip
    [ -e ${fine} ] || wb_make_geoip
    [ -e ${fine} ] || wb_error ${wk_geoip}

}
