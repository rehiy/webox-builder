### Update: 2017-09-07 ###

export wk_cmake=cmake-3.9.2

wb_make_cmake() {

    wb_apply https://cmake.org/files/v3.9/ ${wk_cmake} .tar.gz

    ./bootstrap --prefix=${webox} --docdir=share/doc/cmake --system-curl

    make && make install

}

wb_inst_cmake() {

    local fine=${webox}/bin/cmake

    [ -e ${fine} ] || wb_make_cmake
    [ -e ${fine} ] || wb_error ${wk_cmake}

}
