### Update: 2017-09-09 ###

export wk_imagick=ImageMagick-6.9.9-12

wb_make_imagick() {

    wb_apply http://www.imagemagick.org/download/ ${wk_imagick} .tar.gz

    ./configure --prefix=${webox} LDFLAGS=-L${webox}/lib

    make && make install

}

wb_inst_imagick() {

    local fine=${webox}/bin/convert

    [ -e ${fine} ] || wb_make_imagick
    [ -e ${fine} ] || wb_error ${wk_imagick}

}
