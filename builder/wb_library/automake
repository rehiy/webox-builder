### Update: 2017-05-19 ###

export wk_automake=automake-1.15.1

wb_find_automake() {

    wb_apply http://mirrors.kernel.org/gnu/automake/ ${wk_automake} .tar.xz

}

wb_make_automake() {

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_automake() {

    local fine=${webox}/bin/automake

    [ -e ${fine} ] || wb_find_automake
    [ -e ${fine} ] || wb_make_automake
    [ -e ${fine} ] || wb_error ${wk_automake}

}