#!/bin/sh
#

. ${wbcom}/runtime

#################################################################

ETC_VERSION=0

if [ -f ${wbapp}/etc/version ]; then
    ETC_VERSION=`cat ${wbapp}/etc/version`
fi

if [ $ETC_VERSION -lt $WBX_VERSION ]; then
    ${wbcom}/wbx_install "$WBX_APPS"
fi

#################################################################

if [ $# -eq 1 ]; then
    for APP in $WBX_APPS; do
        ${wbcom}/wbx_service $APP $1
    done
else
    ${wbcom}/wbx_service "$@"
fi
