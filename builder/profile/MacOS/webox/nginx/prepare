#!/bin/sh
#

export APP_USER=_www
export APP_GROUP=_www

#####################################################################

app_prepare() {

    for dir in log run tmp; do
        [ -d ${wbapp}/var/${dir}/nginx ] ||
            mkdir -p ${wbapp}/var/${dir}/nginx
    done

    if [ ! -e ${wbapp}/etc/nginx ]; then
        ln -s ../../webox/nginx/etc ${wbapp}/etc/nginx
    fi

    if [ ! -d ${wbapp}/var/tmp/nginx/proxy_cache ]; then
        mkdir -p ${wbapp}/var/tmp/nginx/proxy_cache
    fi

    chown -R $APP_USER:$APP_GROUP ${wbapp}/var/*/nginx

}

#####################################################################

[ "$1" = "prepare" ] && app_prepare
