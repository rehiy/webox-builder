### Update: 2018-03-26 ###

export wk_redis=redis-4.0.9

wb_find_redis() {

    wb_apply http://download.redis.io/releases/ ${wk_redis} .tar.gz

}

wb_make_redis() {

    make && make PREFIX=/srv/redis install

    mkdir -p /srv/redis/var

}

wb_inst_redis() {

    [ -d /srv/redis/bin ] || wb_find_redis
    [ -d /srv/redis/bin ] || wb_make_redis
    [ -d /srv/redis/bin ] || wb_error ${wk_redis}

    wb_rtm /srv/redis

}
