APP_BIN_NOHUP=1

APP_BIN_START='/srv/mysql/bin/mysqld_safe'

APP_PID_FILE='/srv/mysql/var/run/mysql.pid'

APP_SIG_STOP='TERM'

APP_SIG_RELOAD='HUP'


app_once() {

    grep mysql /etc/group > /dev/null
    if [ $? -ne 0 ]; then
        groupadd mysql -g 77
    fi

    grep mysql /etc/passwd > /dev/null
    if [ $? -ne 0 ]; then
        useradd mysql -u 77 -g 77
        usermod mysql -d /srv/mysql -s /usr/sbin/nologin
    fi

    mkdir -p /srv/mysql/var/{run,log,tmp}
    chown -R mysql:mysql /srv/mysql/var/*

    touch /srv/mysql/var/log/error.log
    chown mysql:mysql /srv/mysql/var/log/error.log

}
