### Update: 2019-05-28 ###

export wk_node=node-v10.16.0

wb_find_node() {

    wb_apply https://nodejs.org/dist/${wk_node##*-}/ ${wk_node} .tar.gz

}

wb_make_node() {

    ./configure --prefix=/srv/node

    make && make install

    mkdir -p /srv/node/var

}

wb_inst_node() {

    [ -d /srv/node/bin ] || wb_find_node
    [ -d /srv/node/bin ] || wb_make_node
    [ -d /srv/node/bin ] || wb_error ${wk_node}

    wb_rtm /srv/node

}
