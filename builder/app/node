### Update: 2019-08-15 ###

export wk_node=node-v10.16.3

wk_find_node() {

    wk__apply https://nodejs.org/dist/${wk_node##*-}/ ${wk_node} .tar.gz

}

wk_make_node() {

    ./configure --prefix=${wbapp}

    make && make install

}

wk_inst_node() {

    local fine=${wbapp}/bin/node

    [ -e ${fine} ] || wk_find_node
    [ -e ${fine} ] || wk_make_node
    [ -e ${fine} ] || wk__error ${wk_node}

}
