### Update: 2020-04-17 ###

export wk_redis=redis-5.0.9

wk_find_redis() {

    wk__apply http://download.redis.io/releases/ ${wk_redis} .tar.gz

}

wk_make_redis() {

    make && make install PREFIX=${wbapp}

}

wk_inst_redis() {

    local fine=${wbapp}/bin/redis-server

    [ -e ${fine} ] || wk_find_redis
    [ -e ${fine} ] || wk_make_redis
    [ -e ${fine} ] || wk__error ${wk_redis}

}
