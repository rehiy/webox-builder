export wk_iconv=libiconv-1.15

wb_make_iconv() {

    wb_apply http://ftp.gnu.org/gnu/libiconv/ ${wk_iconv} .tar.gz

    sed -i '/gets is a security hole/d' srclib/stdio*.h

    ./configure --prefix=${webox} --enable-shared

    make && make install

}

wb_inst_iconv() {

    local fine=${webox}/lib/libiconv.la

    [ -e ${fine} ] || wb_make_iconv
    [ -e ${fine} ] || wb_error ${wk_iconv}

}
