export wk_pcre=pcre-8.38

wb_make_pcre() {

    wb_apply http://jaist.dl.sourceforge.net/project/pcre/pcre/${wk_pcre##*-}/ ${wk_pcre} .tar.gz

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_pcre() {

    local fine=${webox}/lib/libpcre.a

    [ -e ${fine} ] || wb_make_pcre
    [ -e ${fine} ] || wb_error ${wk_pcre}

}
