export wk_pcre=pcre-8.39

wb_make_pcre() {

    wb_apply http://ftp.csx.cam.ac.uk/pub/software/programming/pcre/ ${wk_pcre} .tar.gz

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_pcre() {

    local fine=${webox}/lib/libpcre.a

    [ -e ${fine} ] || wb_make_pcre
    [ -e ${fine} ] || wb_error ${wk_pcre}

}
