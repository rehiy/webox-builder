export wk_libpng=libpng-1.6.18

wb_make_libpng() {

    wb_apply ftp://ftp.simplesystems.org/pub/libpng/png/src/libpng16/ ${wk_libpng} .tar.xz

    ./configure --prefix=${webox}

    make && make install

}

wb_inst_libpng() {

    local fine=${webox}/lib/libpng.a

    [ -e ${fine} ] || wb_make_libpng
    [ -e ${fine} ] || wb_error ${wk_libpng}

}
