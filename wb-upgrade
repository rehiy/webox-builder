#!/bin/sh
#

####################################################################

cd ~

plat=$(uname -s)-$(uname -m)
name=Webox-${plat}-v7.0428.tgz

if [ $(which wget) ]; then
    wget -c -O ${name} http://get.anrip.com/webox/${name}
else
    curl -C - -o ${name} http://get.anrip.com/webox/${name}
fi

tar -xvf ${name}

chown -R 0:0 srv
rm -rf srv/*/var
rm -rf srv/webroot

####################################################################

[ -x /srv/service ] && /srv/service stop

for x in php5 php7 nginx mysql redis webox; do
    ls /srv/${x} | grep -v 'etc\|var' | xargs -I {} rm -rf /srv/${x}/{}
done

rm -rf /srv/webox/var/ready
cp -av srv/* /srv/

rm -rf srv/ ${name}

####################################################################

[ -x /srv/service ] && /srv/service start
